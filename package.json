{
  "name": "mirai-css",
  "version": "0.0.1",
  "description": "A mirai.css file to style native html components",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aipx-proto/mirai-css.git"
  },
  "license": "ISC",
  "scripts": {
    "dev": "npm run tailwind",
    "tailwind": "npx @tailwindcss/cli -i ./styles/index.css -o ./styles/fluent.css --watch",
    "postcss": "postcss styles/index.css -o styles/fluent-post.css --watch",
    "build": "npm run tailwind && npm run postcss"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.10",
    "@tailwindcss/postcss": "^4.1.10",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "postcss-url": "^10.1.3",
    "tailwindcss": "^4.1.10"
  }
}
