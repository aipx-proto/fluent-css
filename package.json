{
  "name": "mirai-css",
  "version": "0.0.1",
  "description": "A mirai.css file to style native html components",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aipx-proto/mirai-css.git"
  },
  "license": "ISC",
  "scripts": {
    "dev": "concurrently \"npm run extract-custom-properties -- --watch\" \"npm run tailwind -- --watch\"",
    "tailwind": "npx @tailwindcss/cli -i ./styles/index.css -o ./build/fluent.css",
    "extract-custom-properties": "node extract-custom-properties.js styles/**/*.css custom-properties.css **/fluent*.css --watch",
    "build": "npm run extract-custom-properties && npm run tailwind"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.10",
    "tailwindcss": "^4.1.10",
    "glob": "^11.0.3",
    "concurrently": "^9.1.2"
  }
}
